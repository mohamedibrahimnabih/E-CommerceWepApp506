@model Company

<div class="row">
    <div class="col-12 mb-3">
        <h2><a asp-action="Index" asp-controller="Company"><i class="bi bi-arrow-left"></i></a> Create New Company</h2>
    </div>
</div>

<div class="row">
    <form asp-action="Edit" asp-controller="Company">
        <input asp-for="Id" type="hidden">

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input class="form-control" asp-for="Name">
            <span class="text-warning" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label for="exampleCompanyDescription" class="form-label">Company Description</label>
            <input class="form-control" asp-for="Description">
            <span class="text-warning" asp-validation-for="Description"></span>
        </div>

        <div class="mb-3">
            <label for="exampleCompanyAdress" class="form-label">Company Adress</label>
            <input class="form-control" asp-for="Adress">
            <span class="text-warning" asp-validation-for="Adress"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

